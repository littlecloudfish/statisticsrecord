{% extends "auth_layout.jinja2" %}
{% block page_styles %}
{% assets "index_style_bundle" %}
<link href="{{ ASSET_URL }}" rel="stylesheet" type="text/css" />
{% endassets %}
{% assets "auth_style_bundle" %}
<link href="{{ ASSET_URL }}" rel="stylesheet" type="text/css" />
{% endassets %}
{% endblock page_styles %}
{% block content %}
{# <div class="container"> #}
  <div class="banner mx-5 mt-5">
    <a href={{ url_for(auth_back) }} class="px-4">Back to Previous</a>
  </div>
  <section>
    <div class="auth">
      <h4>Login</h4>
      <form method="post" action="/login">
        {{ form.csrf_token }}
        <fieldset>
          {{ form.email.label }}
          {{ form.email() }}
          {% if form.email.errors %}
          <ul class="errors">
            {% for error in form.email.errors %}<li>{{ error }}</li>{% endfor %}
          </ul>
          {% endif %}
        </fieldset>
        <fieldset class="my-3">
          {{ form.password.label }}
          {{ form.password }}
          {% if form.email.errors %}
          <ul class="errors">
            {% for error in form.password.errors %}<li>{{ error }}</li>{% endfor %}
          </ul>
          {% endif %}
        </fieldset>
        <fieldset class="mt-3 py-3">{{ form.submit }}</fieldset>
        <fieldset class="pt-3">
          <label>No Account? <a href={{ url_for(signup) }}> Sign Up</a></label>
        </fieldset>
      </form>
    </div>
</div>
</section>

{# </div> #}
{# {% include 'js.jinja2' %} #}
{% endblock content %}