{% extends "dashboard_layout.jinja2" %}
{# content #}
{% block content %}
<div class="row text-center my-3">
  <h3 class="col-sm-12">{{ sub_title }}</h3>
</div>
<div class="form-out mt-3">
  <form action="{{ request.path }}" method="post">
    <div class="row align-items-end">
      <div class="col-sm-10">
        {{ form.mic_video.label }}
        {{ form.mic_video }}
      </div>
      <div class="col-sm-2 submit-button">
        {{ form.submit_mic }}
      </div>
    </div>

    <div class="row mt-5 align-items-end">
      <div class="col-sm-10">
        {{ form.sim_video.label }}
        {{ form.sim_video }}
      </div>
      <div class="col-sm-2 submit-button">
        {{ form.submit_sim }}
      </div>
    </div>

    <div class="row mt-5 align-items-end">
      <div class="col-sm-10">
        {{ form.ref_video.label }}
        {{ form.ref_video }}
      </div>
      <div class="col-sm-2 submit-button">
        {{ form.submit_ref }}
      </div>
    </div>

    <div class="row mt-5 align-items-end">
      <div class="col-sm-10">
        {{ form.crt_video.label }}
        {{ form.crt_video }}
      </div>
      <div class="col-sm-2 submit-button">
        {{ form.submit_crt }}
      </div>
    </div>

    <div class="row mt-5 align-items-end">
      <div class="col-sm-10">
        {{ form.rcd_video.label }}
        {{ form.rcd_video }}
      </div>
      <div class="col-sm-2 submit-button">
        {{ form.submit_rcd }}
      </div>
    </div>

    <div class="row mt-5 align-items-end">
      <div class="col-sm-10">
        {{ form.ugt_video.label }}
        {{ form.ugt_video }}
      </div>
      <div class="col-sm-2 submit-button">
        {{ form.submit_ugt }}
      </div>
    </div>

    <div class="row my-5 align-items-end">
      <div class="col-sm-10">
        {{ form.cht_video.label }}
        {{ form.cht_video }}
      </div>
      <div class="col-sm-2 submit-button">
        {{ form.submit_cht }}
      </div>
    </div>
  </form>
</div>
{% endblock content %}