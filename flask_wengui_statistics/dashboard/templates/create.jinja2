{% extends "dashboard_layout.jinja2" %}
{# content #}
{% block content %}
<div class="row text-center my-3">
  <h3 class="col-sm-12">{{ sub_title }}</h3>
</div>

<div class="form-out">
  <form action="{{ request.path }}" method="post">
    <div class="form-in">
      <div class="row align-items-end">
        <div class="col-sm-3">
          {{ form.name.label }}
          {{ form.name }}
        </div>
        <div class="col-sm-3">
          {{ form.email.label }}
          {{ form.email }}
        </div>
        <div class="col-sm-2">
          {{ form.password.label }}
          {{ form.password }}
        </div>
        <div class="col-sm-2">
          {{ form.type.label }}
          {{ form.type }}
        </div>
        <div class="col-sm-2">
          {{ form.team.label }}
          {{ form.team }}
        </div>
      </div>
      <div class="row justify-content-end mt-5">
        <div class="col-sm-2">{{ form.create }}</div>
      </div>
    </div>
  </form>
</div>

{% endblock content %}