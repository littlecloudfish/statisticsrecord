{% extends "dashboard_layout.jinja2" %}
{# content #}
{% block content %}

<div class="row text-center my-3">
  <h3 class="col-sm-12">{{ sub_title }}</h3>
</div>

<div class="mt-3">
  <form action="{{ request.path }}" method="post">
    {# {{ form.csrf_token }} #}
    <div class="row mt-4 align-items-end">
      <div class="col-sm-10">
        {{ form.auditing.label }}
        {{ form.auditing }}
      </div>
      <div class="col-sm-2 submit-button">
        {# {{ form.apply.label }} #}
        {{ form.apply }}
      </div>
    </div>

    <div class="row mt-4">
      <div class="col-sm-12">
        {{ form.title.label }}
        {{ form.title }}
      </div>
    </div>
    <div class="row mt-4">
      <div class="col-sm-4">
        {{ form.global_code.label }}
        {{ form.global_code }}
      </div>
      <div class="col-sm-4">
        {{ form.team_code.label }}
        {{ form.team_code }}
      </div>
      <div class="col-sm-4">
        {{ form.length.label }}
        {{ form.length }}
      </div>
    </div>
    <div class="row mt-4 mb-5 align-items-end">
      <div class="col-sm-5">
        {{ form.link.label }}
        {{ form.link }}
      </div>
      <div class="col-sm-1">
        <a href="{{ form.link.data }}" target="_blank">{{ '<i class="bx bx-link"
            style="color:red; font-size: 36px"></i>' if
          form.link.data != None }}</a>
      </div>
      <div class="col-sm-5">
        {{ form.disk_link.label }}
        {{ form.disk_link }}
      </div>
      <div class="col-sm-1">
        <a href="{{ form.disk_link.data }}" target="_blank">{{ '<i class="bx bxs-disc"
            style="color:red; font-size: 36px"></i>' if form.disk_link.data != None }}</a>
      </div>
    </div>
    {# #}
    <div class="row mt-5">
      <div class="col-sm-10">
        {{ form.plan.label }}
        {{ form.plan }}
      </div>
      <div class="col-sm-2">
        {{ form.plan_point.label }}
        {{ form.plan_point }}
      </div>
    </div>
    <div class="row mt-5">
      <div class="col-sm-10">
        {{ form.edit.label }}
        {{ form.edit }}
      </div>
      <div class="col-sm-2">
        {{ form.edit_point.label }}
        {{ form.edit_point }}
      </div>
    </div>
    <div class="row mt-5">
      <div class="col-sm-10">
        {{ form.audit.label }}
        {{ form.audit }}
      </div>
      <div class="col-sm-2">
        {{ form.audit_point.label }}
        {{ form.audit_point }}
      </div>
    </div>
    <div class="row mt-5">
      <div class="col-sm-10">
        {{ form.dubb.label }}
        {{ form.dubb }}
      </div>
      <div class="col-sm-2">
        {{ form.dubb_point.label }}
        {{ form.dubb_point }}
      </div>
    </div>
    <div class="row mt-5">
      <div class="col-sm-10">
        {{ form.trans.label }}
        {{ form.trans }}
      </div>
      <div class="col-sm-2">
        {{ form.trans_point.label }}
        {{ form.trans_point }}
      </div>
    </div>
    <div class="row mt-5">
      <div class="col-sm-10">
        {{ form.check.label }}
        {{ form.check }}
      </div>
      <div class="col-sm-2">
        {{ form.check_point.label }}
        {{ form.check_point }}
      </div>
    </div>
    <div class="row mt-5">
      <div class="col-sm-12">
        {{ form.comment.label }}
        {{ form.comment }}
      </div>
    </div>
    <div class="row mt-5">
      <div class="col-sm-12">
        {{ form.comment_audit.label }}
        {{ form.comment_audit }}
      </div>
    </div>
    {# #}
    <div class="col-sm-12 d-flex justify-content-end submit-button mt-5">
      <div class="col-sm-2 mx-2">{{ form.deny() }}</div>
      <div class="col-sm-2">{{ form.approve() }}</div>
    </div>
  </form>
</div>
{# #}
{% endblock content %}